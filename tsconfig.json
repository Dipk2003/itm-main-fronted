{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/admin": [
        "./src/modules/admin"
      ],
      "@/buyer": [
        "./src/modules/buyer"
      ],
      "@/vendor": [
        "./src/modules/vendor"
      ],
      "@/core": [
        "./src/modules/core"
      ],
      "@/payment": [
        "./src/modules/payment"
      ],
      "@/support": [
        "./src/modules/support"
      ],
      "@/analytics": [
        "./src/modules/analytics"
      ],
      "@/shared": [
        "./src/shared"
      ],
      "@/ui": [
        "./src/shared/components"
      ],
      "@/components": [
        "./src/shared/components"
      ]
    },
    "noUncheckedIndexedAccess": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**"
  ]
}